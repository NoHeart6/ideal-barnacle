{
  "version": 2,
  "builds": [
    { "src": "*.php", "use": "vercel-php@0.6.0" },
    { "src": "pages/**/*.php", "use": "vercel-php@0.6.0" },
    { "src": "assets/**", "use": "@vercel/static" },
    { "src": "css/**", "use": "@vercel/static" }
  ],
  "routes": [
    { "src": "/assets/(.*)", "dest": "/assets/$1" },
    { "src": "/css/(.*)", "dest": "/css/$1" },
    { "src": "/(.*)", "dest": "/index.php" }
  ],
  "env": {
    "NOW_PHP_DEBUG": "1"
  }
} 
